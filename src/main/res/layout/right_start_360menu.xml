<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9000000" >

    <LinearLayout
        android:id="@+id/menu_header"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#FF031536"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/menuUser"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@mipmap/cc" />

        <TextView
            android:id="@+id/picDestro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:text="开启后，与好友通话将显示你的个性图片"
            android:textColor="#eee" />

        <Button
            android:id="@+id/showTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="#FF08A107"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="开启我的来电秀"
            android:textSize="18sp"
            android:textColor="#eee" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/move"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/menu_header"
        android:background="#FF031536"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/menu_move"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/lm"/>"

        <TextView
            android:id="@+id/menu_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#eee"
            android:layout_toRightOf="@id/menu_move"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="摇一摇" />

        <ImageView
            android:id="@+id/go1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/bg" />

    </RelativeLayout>
    
    
      <RelativeLayout
        android:id="@+id/package1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/move"
        android:layout_marginTop="0.5dp"
        android:background="#FF031536"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/menu_move2"
            android:layout_marginLeft="30dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/om"/>

        <TextView
            android:id="@+id/menu_package1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#eee"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/menu_move2"
            android:text="钱包" />

        <ImageView
            android:id="@+id/go2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bg" />

    </RelativeLayout>
    
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/package1"
        android:background="#FF031536"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/package2"
        >

        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/menu_xp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/dm"/>

        <TextView
            android:id="@+id/menu_xp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#eee"
            android:textSize="18sp"
            android:layout_toRightOf="@id/menu_xp"
            android:layout_marginLeft="10dp"
            android:text="手机先赔" />

        <ImageView
            android:id="@+id/go3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bg" />

    </RelativeLayout>
    
        
         <RelativeLayout
        android:id="@+id/package3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/package2"
        android:background="#FF031536"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/menu_set1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/km"/>

        <TextView
            android:id="@+id/menu_set2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#eee"
            android:textSize="18sp"
            android:layout_toRightOf="@id/menu_set1"
            android:layout_marginLeft="10dp"
            android:text="设置" />

        <ImageView
            android:id="@+id/go4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bg" />

    </RelativeLayout>
    
    
      <RelativeLayout
        android:id="@+id/package4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/package3"
        android:layout_marginTop="0.5dp"
        android:background="#FF031536"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/menu_move4"
            android:layout_marginLeft="30dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ul"/>

        <TextView
            android:id="@+id/menu_package3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#eee"
            android:textSize="18sp"
            android:layout_toRightOf="@id/menu_move4"
            android:layout_marginLeft="10dp"
            android:text="关于" />

        <ImageView
            android:id="@+id/go5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bg" />

    </RelativeLayout>
        

</RelativeLayout>
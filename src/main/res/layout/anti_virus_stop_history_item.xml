<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    >
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blockUserSelected"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/blockUserSelected"
        android:id="@+id/phoneNum"
        android:text="18363803961"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneInfo"
        android:layout_marginLeft="10dp"
        android:text="elise"
        android:layout_toRightOf="@id/phoneNum"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneType"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_below="@id/phoneNum"
        android:text="number"
        android:layout_toRightOf="@id/blockUserSelected"
        android:textColor="#FFF68209"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoningTime"
        android:text="name"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@id/phoneInfo"/>
</RelativeLayout>

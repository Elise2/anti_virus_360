<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/centerMenuHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ff26ab06">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ku"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/sh"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="87"
            android:layout_gravity="center"
            android:textSize="70dp"/>
        <ImageView
            android:layout_marginLeft="320dp"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/rm"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="-110dp"
            android:text="流畅度中"
            android:layout_gravity="center"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="110dp"
            android:text="流畅度中"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_below="@id/centerMenuHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/clearMore"
                android:layout_width="match_parent"
                android:layout_height="48dp"
               android:layout_weight="1"
                android:layout_marginTop="0.5dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/menu_move4"
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/zm"/>

                <TextView
                    android:id="@+id/menu_package3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/menu_move4"
                    android:layout_marginLeft="10dp"
                    android:text="清理加速" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/menu_move4"
                    android:layout_below="@id/menu_package3"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffb0b7a5"
                    android:textSize="12sp"
                    android:text="剩余存储空间9%"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/flowManger"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginTop="0.5dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/flowMonitor"
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/dn"/>

                <TextView
                    android:id="@+id/setFlow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/flowMonitor"
                    android:layout_marginLeft="10dp"
                    android:text="流量监控" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/flowMonitor"
                    android:layout_below="@id/setFlow"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffb0b7a5"
                    android:textSize="12sp"
                    android:text="设置流量套餐"
                    />
            </RelativeLayout>
        </LinearLayout>



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/stopMange"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginTop="0.5dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/stop"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ym"/>

            <TextView
                android:id="@+id/stopInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/stop"
                android:layout_marginLeft="10dp"
                android:text="骚扰阻拦" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/stop"
                android:layout_below="@id/stopInfo"
                android:layout_marginLeft="10dp"
                android:textColor="#ffb0b7a5"
                android:textSize="12sp"
                android:text="阻拦骚扰电话短息"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginTop="0.5dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/offer"
                android:layout_marginLeft="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/en"/>

            <TextView
                android:id="@+id/offerMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/offer"
                android:layout_marginLeft="10dp"
                android:text="支付保镖" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/offer"
                android:layout_below="@id/offerMoney"
                android:layout_marginLeft="10dp"
                android:textColor="#ffb0b7a5"
                android:textSize="12sp"
                android:text="获取10万赔付金"
                />
        </RelativeLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/softMag"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginTop="0.5dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/softManager"
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/xm"/>

                <TextView
                    android:id="@+id/softManage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/softManager"
                    android:layout_marginLeft="10dp"
                    android:text="软件管理" />
                <TextView
                    android:id="@+id/betterSoft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/softManager"
                    android:layout_below="@id/softManage"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffb0b7a5"
                    android:textSize="12sp"
                    android:text="8款软件可优化"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginTop="0.5dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/antiDiePic"
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/cn"/>

                <TextView
                    android:id="@+id/antiDie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/antiDiePic"
                    android:layout_marginLeft="10dp"
                    android:text="手机杀毒" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/antiDiePic"
                    android:layout_below="@id/antiDie"
                    android:layout_marginLeft="10dp"
                    android:textColor="#ffb0b7a5"
                    android:textSize="12sp"
                    android:text="三重引擎防护中"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_height="48dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/upButton"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/mn"
            android:layout_gravity="center"
            />
    </FrameLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <FrameLayout
        android:id="@+id/clearHeader"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ff26ab06">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/sh" />

        <TextView
            android:id="@+id/speedNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="87"
            android:textColor="#ffffff"
            android:textSize="70dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MB"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="280dp"/>
        <TextView
            android:id="@+id/sejectClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议清理"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="280dp"/>
        <Button
            android:id="@+id/clearBtn2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="一键清理加速"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/btn_clear_style"
            android:layout_marginTop="205dp"
            android:layout_marginLeft="80dp"
            android:textColor="#ffffff"
            />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/clear1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/clearHeader"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_move"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/kq" />"

        <TextView
            android:id="@+id/menu_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/menu_move"
            android:text="弹力手机加速"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/go1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bg" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/clear2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/clear1"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/clearSpace"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/kq" />"

        <TextView
            android:id="@+id/clearSpaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/clearSpace"
            android:text="深度空间清理"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/go2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bg" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/clear3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/clear2"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scrolStop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/mp" />"

        <TextView
            android:id="@+id/lockScrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/scrolStop"
            android:text="锁屏省电"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/go4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bg" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/clear4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_below="@id/clear3"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Abulm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/mp" />"

        <TextView
            android:id="@+id/abulmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Abulm"
            android:text="相册清理"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/go6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bg" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear5"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp"
        android:layout_below="@id/clear4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/manageSecret"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/mp" />"

        <TextView
            android:id="@+id/secretText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/manageSecret"
            android:text="隐私清理"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/go7"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bg" />

    </RelativeLayout>


</RelativeLayout>
